                url:"/chunkreloadDOWN", type : "GET", 
                data : {'direction' : 'DOWN', 'username':username, 'firstname':firstname, 'title':postfrom},
                contentType: "application/json",
                dataType: 'json',
                success : function(result){
                  var pg = result['success']['data'];
                  var feedhtml = '';
                  for (i = 0; i < pg.length; i++){
                    var textdt = pg[i];
                    
                    var jdata = JSON.stringify(pg[i])
                    //console.log(jdata) 
                    var username = textdt.username ;
                    var ppath = textdt.path ;
                    var ppathlen = ppath.split('\\').length-1 ;
                    var imgtransitdir = 'imgtransitdir';

                    var imgpath = ppath.split('\\').slice(0, ppathlen).join('\\')+'\\'+imgtransitdir+'\\'+username+'.jpg' 
                    feedhtml += ''+
                        '<div><form action="/osmexpand" method = "POST" id = "expand" dataType="json", contentType = //"application/json">'+
                        '<div>'+
                        '<input type="hidden" name="mainuser" value=" '+username+'-'+firstname+'"></input>'+
                        '<input type="hidden" name="ppath" id="pathid" value="'+ppath+'"></input>'+
                        '<input type="hidden" name="postdata" value='+jdata+'></input>'+
                        '<button class="myDiv" type="submit"  id="expandpath-'+ppath+'" name="expandbtn" value="">'+

                        '<label class="labelosm"><p class="timeparaosm"> <a href="/useraccount/'+username+'?fname='+firstname+'">'+
                        '<img class="imguserclass" '+
                        'src="..//'+imgpath+'" alt="osmimg" width="10%" height="10%">'+username+'-'+textdt.created+'</a></p>'
                    jdata = {};    
                    if(textdt.img.length > 0){feedhtml +='<img src="..//'+textdt.img+'" alt="osmimg" width="50%" height="50%">'}

                    feedhtml += '<pre class="preLeftAlign"><br/>'+textdt.text+'</pre></label></button><br/>'
                    feedhtml += '<div class="buttonosm"><div id="divosmtttl-'+ppath+'" class="osmtooltip" style="display:inline-flex;" list="userld" >'+
                //'<input type="button" class="wdgreply"  id="likeby-'+ppath+'" name="likeby" value="Like-By" onclick="onLikeby(this.id)" />'+
                
                '<input type="button" class="hoverwdgreply"  id="'+ppath+'" name="likeby" value="'+textdt.ld.lcount+'" onclick="onLikeby(this.id)" />'+
                '</div>'+
                '<input type="button"  id="'+ppath+'" name="like" class="likebtn" onclick="onLike(this.id)"/>'+
             
                //'<input type="button" id="likecount'+ppath+'" name="likecount" class="wdgreply" value="'+textdt.ld.lcount+'" />'+
                '<input type="button" id="'+ppath+'" name="dislike" class="dislikebtn" onclick="onDisLike(this.id)" />'+
                //'<input type="button" id="dislikecount'+ppath+'" name="dislikecount" class="wdgreply" value="'+textdt.ld.dcount+'" />'+
                '<div id="divosmtttd-'+ppath+'" class="osmtooltip" style="display:inline-flex;" list="userld" >'+
                '<input type="button" class="hoverwdgreply" id="'+ppath+'" name="dislikeby"'+
                '    value="'+textdt.ld.dcount+'" onclick="onDisLikeby(this.id)" />'+
                '</div>'+
